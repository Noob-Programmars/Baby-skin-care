<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vilasbg4"


    >

    <ImageButton
        android:id="@+id/bathbutton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/foodbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cartbutton"
        app:srcCompat="@drawable/babybathtub" />


    <ImageView
        android:id="@+id/babyview"
        android:layout_width="181dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toTopOf="@+id/bathbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        app:srcCompat="@drawable/bboy" />

    <ImageView
        android:id="@+id/cribview"
        android:layout_width="331dp"
        android:layout_height="204dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/bathbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/babybutton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/crib1" />

    <ImageButton
        android:id="@+id/babybutton"
        android:layout_width="181dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:background="@android:color/transparent"
        android:onClick="Showpopup"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/bathbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <ImageButton
        android:id="@+id/cribbutton"
        android:layout_width="322dp"
        android:layout_height="163dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="52dp"
        android:background="@android:color/transparent"
        android:onClick="Showpopup2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/bathbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cribview"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/cartbutton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bathbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shoppingcart" />

    <ImageButton
        android:id="@+id/menubutton"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageButton
        android:id="@+id/foodbutton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bathbutton"
        app:srcCompat="@drawable/feeding" />

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedlinearlayout"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/coin"
            android:layout_width="48dp"
            android:layout_height="39dp"
            app:srcCompat="@drawable/coin" />

        <TextView
            android:id="@+id/scoreview"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:text="100"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="181dp"
        android:layout_height="264dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/drawer3" />

</androidx.constraintlayout.widget.ConstraintLayout>